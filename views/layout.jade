doctype html
include mixins
+script('/js/jquery.min.js')
+script('/js/jquery-ui.min.js')
+script('/js/bootstrap.min.js')
+script('/js/bootstrap-slider.js')
+script('/js/reconnecting-websocket.js')
+script('/js/site.js')

mixin menuItem( link, icon, text )
    li
        a(href="#{link}")
            +glyph(icon)
            span.hidden-xs
                | 
                = text

mixin color-button(name)
    button.col-xs-4.btn.btn-default.btn-color(class="color-" + name )
        | X

mixin color-row(name)
    - for( var i = 1; i < 5; i++ ) {
        +color-button(name + i)
    - }


html
    head
        title Music
        //- meta(name="viewport",content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width")
        +favicon('/images/favicon.gif')
        +style('/css/jquery-ui-smoothness.min.css')
        +style('/css/bootstrap-slider.css')
        +style('/css/index.css')
        +styles
    body
        div.navbar.navbar-fixed-top(role='navigation')
            div.container-fluid
                div.pull-right#connected
                    +glyph("flash")

                div.navbar-header
                    a.navbar-brand(href="/",title="Main Link")
                        | Illuminator
                ul
                    //-+menuItem("start",    "play",   "Start" )
                    //-+menuItem("pause",    "pause",  "Pause" )
                    +menuItem("action",   "fire",   "Action" )
                    +menuItem("devices",  "tasks",  "Devices" )
                    +menuItem("channels", "stats",  "Channels" )


        div.container-fluid.main-content
            block content

        footer
            div.container-fluid
                div.row
                    div.col-xs-6
                        | powered by  
                        a(href='https://github.com/GeraldWodni/kern.js') kern.js
                    div.col-xs-10.text-right
                        | Â©copyright 2014 by 
                        a(href='http://wodni.at') Gerald Wodni

        div.color-selector.container#color-selector-template
            div.row
                +color-row("r")
            div.row
                +color-row("g")
            div.row
                +color-row("b")

        +scripts
